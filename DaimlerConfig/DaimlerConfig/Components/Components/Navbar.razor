@using DaimlerConfig.Services
@inject UsernameService usernameService
@using MudBlazor

<!-- Navbar -->
<MudAppBar Elevation="2" Color="Color.Primary" Class="navbar-aligned" Style="height: 64px;">
    <!-- Haus Icon links -->
    <MudIconButton href="/" Icon="@Icons.Material.Filled.Home"
                   Color="Color.Inherit"
                   Size="Size.Large"
                   Class="mr-3" />

    <!-- Titel in der Mitte -->
    <MudContainer MaxWidth="MaxWidth.False" Class="d-flex justify-center align-center pa-0" Style="flex-grow: 1;">
        <MudText Typo="Typo.h5" Class="text-center font-weight-medium">
            @Title
        </MudText>
    </MudContainer>

    <!-- Rechte Seite: Username und Einstellungen -->
    <div class="d-flex align-center">
        <!-- Benutzername -->
        <MudText Typo="Typo.subtitle1" Class="mr-8 font-weight-medium" Style="white-space: nowrap;">
            @(usernameService.Username?.Split(';')[0] ?? "Unknown User")
        </MudText>

        <!-- Einstellungen -->
        <MudIconButton Icon="@Icons.Material.Filled.Settings"
                       Color="Color.Inherit"
                       Size="Size.Large"
                       OnClick="OpenSettings"
                       Class="settings-aligned" />
    </div>
</MudAppBar>

@if (ShowSettings)
{
        <Settings OnClosing="CloseSetting" />
}

@code {
    [Parameter] public string Title { get; set; } = "Default Title";

    private bool ShowSettings = false;

    #region Settings
    private void OpenSettings()
    {
        if (ShowSettings) return;
        ShowSettings = true;
    }

    private void CloseSetting()
    {
        ShowSettings = false;
    }
    #endregion
