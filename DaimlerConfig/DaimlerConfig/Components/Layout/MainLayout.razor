@inherits LayoutComponentBase
@using Microsoft.Extensions.Configuration

@inject IConfiguration Configuration

@code {
    private bool showOnlySettings => 
        string.IsNullOrWhiteSpace(Configuration.GetConnectionString("DefaultConnection"));
}

@if (showOnlySettings)
{
    @* Required *@
    <MudThemeProvider />
    <MudPopoverProvider />

    @* Needed for dialogs *@
    <MudDialogProvider />

    @* Needed for snackbars *@
    <MudSnackbarProvider />
    <Settings />
}
else
{
    <div class="page">
        <main>
            <article class="content">
                @* Required *@
                <MudThemeProvider />
                <MudPopoverProvider />

                @* Needed for dialogs *@
                <MudDialogProvider />

                @* Needed for snackbars *@
                <MudSnackbarProvider />

                @Body
            </article>
        </main>
    </div>
}

