<div class="tool-container">
    <!-- header bar -->
    <div class="tool-header">Operation</div>

    <!-- form -->
    <form class="tool-form">
        <!-- Operation ID – full width -->
        <div class="form-row">
            <label for="op-id">Operation ID:</label>
            <div class="input-group">
                <input type="text" id="op-id" value="23" readonly>
            </div>
        </div>

        <div class="form-row">
            <label for="op-id">Serial/Parallel:</label>
            <div class="input-group">
                <select id="tool-type">
                    <option value="">Serial</option>
                    <option value="">Parallel</option>
                </select>
            </div>
        </div>

        <!-- Operation ShortName -->
        <div class="form-row">
            <label for="op-shortname">Operation ShortName:</label>
            <div class="input-group">
                <input type="text" id="op-shortname" placeholder="Operation 1" maxlength="16">
            </div>
        </div>

        <!-- Operation Sequenz (with error state) -->
        <div class="form-row">
            <label for="op-sequenz">Operation Sequenz:</label>
            <div class="input-group error">
                <input type="text" id="op-sequenz" placeholder="Fehler">
            </div>
        </div>

        <!-- add other rows here… -->
        <div class="form-row">
            <label for="op-sequenz">Operation Description:</label>
            <div class="input-group error">
                <textarea id="tool-description" rows="4" maxlength="100"></textarea>
            </div>
        </div>

        <div class="form-row">
            <label for="op-sequenz">Operation Sequenz Group:</label>
            <div class="input-group error">
                <textarea id="tool-description" rows="4" maxlength="100"></textarea>
            </div>
        </div>

    </form>
</div>
