<div class="screen">
    @formular
    <Stations></Stations>
    <div class="table_area">
        <Table SetFormular="SetFormular"></Table>
        @switch (formular)
        {
            case 0:
                <ToolFormular></ToolFormular>
                break;
            case 1:
                <OperationFormular></OperationFormular>
                break;
            case 2: 
                <OperationClassFormular></OperationClassFormular>
                break;
        }
